<Page
    x:Class="BelShina_HMI.Pages.ConturPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BelShina_HMI.Pages"
    xmlns:local1="clr-namespace:BelShina_HMI.ViewModels"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ConturPage"
    d:DesignHeight="900"
    d:DesignWidth="1600"
    mc:Ignorable="d">
    <Page.DataContext>
        <local1:VerticalConturViewModer />
    </Page.DataContext>

    <Grid>
        <lvc:CartesianChart x:Name="Chart_P" Margin="0,0,0,202">
            <lvc:CartesianChart.Series>
                <!--<lvc:RowSeries Values="{Binding Values2}" Panel.ZIndex="1"></lvc:RowSeries>-->
                <lvc:VerticalLineSeries
                    Panel.ZIndex="0"
                    Fill="Transparent"
                    Stroke="Black"
                    Values="{Binding ValuesBefore1}" />
                <lvc:VerticalLineSeries
                    Panel.ZIndex="1"
                    Fill="Transparent"
                    Stroke="Blue"
                    Values="{Binding ValuesAfter1}" />
                <lvc:VerticalLineSeries
                    Panel.ZIndex="0"
                    Fill="Transparent"
                    Stroke="Black"
                    Values="{Binding ValuesBefore2}" />
                <lvc:VerticalLineSeries
                    Panel.ZIndex="1"
                    Fill="Transparent"
                    Stroke="Blue"
                    Values="{Binding ValuesAfter2}" />
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis
                    Title="{Binding YaxesName}"
                    FontSize="16"
                    FontWeight="Black">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="1" />
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis
                    Title="{Binding XaxesName}"
                    FontSize="16"
                    FontWeight="Black"
                    LabelsRotation="-90"
                    MinValue="0" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.DataTooltip>
                <lvc:DefaultTooltip SelectionMode="SharedYValues" />
            </lvc:CartesianChart.DataTooltip>
        </lvc:CartesianChart>

        <CheckBox
            x:Name="checkBox"
            Margin="236,0,0,160"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="CheckBox"
            IsChecked="{Binding CurveStarted_1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <CheckBox
            x:Name="checkBox1"
            Margin="236,0,0,127"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="CheckBox"
            IsChecked="{Binding CurveStarted_2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <CheckBox
            x:Name="checkBox2"
            Margin="236,0,0,95"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="CheckBox"
            IsChecked="{Binding ReadOPC_1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <CheckBox
            x:Name="checkBox3"
            Margin="236,0,0,61"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="CheckBox"
            IsChecked="{Binding ReadOPC_2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            x:Name="label"
            Margin="74,0,0,101"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="{Binding ST_State_1}" />
        <Button
            x:Name="Распечать"
            Width="212"
            Height="39"
            Margin="0,0,270,96"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="Print_Click"
            Content="Печатать" />

    </Grid>
</Page>
